		List<Integer> max = new ArrayList<>();
		List<Integer> min = new ArrayList<>();
		boolean maxvalid = false;
		boolean minvalid = false;

		if (ar[0] > ar[1]) {
			max.add(0);
			minvalid = true;
		} else {
			min.add(0);
			maxvalid = true;
		}
		int i = 1;
		while (i < ar.length) {
		}
	}
}
