package Paytm;

import java.util.ArrayList;
import java.util.List;

public class Combination_Sum {
	public static void main(String[] args) {
		int candidates[] = { 2, 3, 6, 7 };
		int target = 7;
		List<Integer> ans = new ArrayList<Integer>();
		combinationSum(candidates, target, 0, ans);
	}

	private static void combinationSum(int[] candidates, int target, int i, List<Integer> ans) {
		// TODO Auto-generated method stub
		List<List<Integer>> sans = new ArrayList<List<Integer>>();
		if (target == 0) {
			sans.add(ans);
			return sans;
		}
		if (target < 0 || i > candidates.length) {
			return sans;
		}
		if (candidates[i] > target) {
			combinationSum(candidates, target, i + 1, ans);
		} else {
			combinationSum(candidates, target, i + 1, ans);
			combinationSum(candidates, target-candidates[i], i + 1, ans);
		}
	}
}
