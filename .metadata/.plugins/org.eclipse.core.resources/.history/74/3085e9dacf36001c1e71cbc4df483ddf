package dp;

public class CoinChange {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int coin[] = { 1, 2, 5 };
		int amt = 11;
		System.out.println(minCoinNeeded(coin, 0, amt, 0));
		;
	}

	public static int minCoinNeeded(int coin[], int i, int amt) {
		if (amt == 0) {
			return coins;
		}
		if (amt < 0 || i >= coin.length)
			return Integer.MAX_VALUE;

		if (amt - coin[i] >= 0) {
			minCoinNeeded(coin, i, amt - coin[i])+1;
			minCoinNeeded(coin, i + 1, amt);
		} else {

			minCoinNeeded(coin, i + 1, amt);
		}
		return Math.min(inc, exc);
	}

}
